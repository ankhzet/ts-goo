# EditorConfig is awesome: https://EditorConfig.org
root = true

[*]
end_of_line = lf
insert_final_newline = true
indent_style = space
indent_size = 4
charset = utf-8
max_line_length = 120

[*.md]
trim_trailing_whitespace = false

[*.js]
trim_trailing_whitespace = true

[*.prisma]
indent_size = 2

[*.json]
indent_size = 4

[*.yml]
indent_size = 2

[{package,lerna,nx}.json]
indent_size = 4

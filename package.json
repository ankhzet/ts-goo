{
    "name": "@ankhzet/goo",
    "author": "AnkhZet ankhzet@gmail.com",
    "description": "Elegoo .goo file format reader/writer",
    "version": "0.0.2",
    "type": "module",
    "private": false,
    "scripts": {
        "build": "pnpm run build:cjs && pnpm run build:esm",
        "build:cjs": "tsc -p tsconfig.cjs.json && echo '{ \"type\": \"commonjs\" }' > './dist/cjs/package.json'",
        "build:esm": "tsc -p tsconfig.esm.json && echo '{ \"type\": \"module\" }' > './dist/esm/package.json'",
        "test:write": "tsx ./tests/goo.test.ts",
        "test:debug": "tsx --inspect ./tests/goo.test.ts",
        "lint": "eslint '**/*.ts'",
        "lint:fix": "pnpm run lint -- --fix",
        "prepublishOnly": "pnpm run build && rm -f ./dist/cjs/*.tsbuildinfo && rm -f ./dist/esm/*.tsbuildinfo"
    },
    "keywords": [
        "elegoo",
        "goo",
        "reader",
        "writer",
        "parser",
        "typescript"
    ],
    "homepage": "https://github.com/ankhzet/ts-goo",
    "repository": "ankhzet/ts-goo",
    "module": "./lib/index.ts",
    "types": "./lib/index.ts",
    "files": [
        "dist",
        "LICENSE",
        "README.md",
        "CHANGELOG.md"
    ],
    "dependencies": {
        "sharp": "^0.33.5"
    },
    "devDependencies": {
        "@types/node": "^18.15.3",
        "@torque/eslint-config": "~1.2.4",
        "eslint": "~8.57.1",
        "tsx": "^4.19.2",
        "typescript": "^5.6.3"
    },
    "publishConfig": {
        "exports": {
            ".": {
                "types": "./dist/esm/index.d.ts",
                "default": "./dist/esm/index.js",
                "import": "./dist/esm/index.js",
                "require": "./dist/cjs/index.js"
            }
        },
        "types": "./dist/esm/index.d.ts",
        "main": "./dist/cjs/index.js",
        "module": "./dist/esm/index.js"
    },
    "engines": {
        "node": ">=18.17.0"
    }
}
